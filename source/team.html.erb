<div class="text-center">
  <h1>Our Team</h1>
    <% team = %w(romain seb anne) %>
  <ul class="list-inline text-center">
    <% team.each do |member| %>
      <li>
        <%= image_tag "#{member}.jpg", class: "card-avatar-large" %>
        <h3><%= member.capitalize %></h3>
      </li>
    <% end %>
  </ul>

  <h3 class="padded">
    <%= link_to '<i class="fa fa-envelope" aria-hidden="true"></i> contact@airbnb.com', "mailto:contact@airbnb.com" %>
  </h3>

</div>
